rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado leia e escreva em qualquer documento.
    // Para produção, você deve restringir isso ainda mais com base nas suas necessidades.
    // Exemplo: permitir que um usuário leia/escreva apenas seus próprios dados.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
